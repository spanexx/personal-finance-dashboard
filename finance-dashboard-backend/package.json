{
  "name": "finance-dashboard-backend",
  "version": "1.0.0",
  "description": "Personal Finance Dashboard Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "clean": "rimraf node_modules",
    "reinstall": "npm run clean && npm ci",
    "dev": "nodemon server.js",
    "dev:minimal": "nodemon server-minimal.js",
    "dev:no-ml": "nodemon server-no-ml.js",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "test:watch": "jest --watchAll",
    "test:routes": "node test-routes.js",
    "test:api": "npm run test:routes",
    "seed:categories": "node scripts/seed-categories.js",
    "seed:transactions": "node scripts/seed-transactions.js",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "format": "prettier --write .",
    "lint:fix": "eslint . --ext .js --fix --ignore-path .gitignore",
    "train-ml-model": "node ml/train.js",
    "install:tensorflow": "npm uninstall @tensorflow/tfjs-node && npm install @tensorflow/tfjs-node"
  },
  "keywords": [
    "finance",
    "dashboard",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@sendgrid/mail": "^8.1.5",
    "@socket.io/redis-adapter": "^8.3.0",
    "@tensorflow/tfjs-node": "^4.22.0",
    "archiver": "^7.0.1",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csv-parser": "^3.2.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.5.0",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "file-type": "^16.5.4",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.15.1",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "natural": "^8.1.0",
    "node-cron": "^4.1.0",
    "nodemailer": "^7.0.3",
    "pdfkit": "^0.17.1",
    "redis": "^5.5.5",
    "sharp": "^0.34.2",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "validator": "^13.15.15",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.1"
  }
}
